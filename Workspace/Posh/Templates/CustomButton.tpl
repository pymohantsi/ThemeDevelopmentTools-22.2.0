<a 
  class="custom-button" 
  data-type="link" 
  data-name="buttonUrl" 
  data-default="https://example.com">

  <i 
    class="fa" 
    data-type="text" 
    data-name="buttonIcon" 
    data-default="fa-star">
  </i>

  <span 
    data-type="text" 
    data-name="buttonLabel" 
    data-default="Click Me">
    Click Me
  </span>
</a>
